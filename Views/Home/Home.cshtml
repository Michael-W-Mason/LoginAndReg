@model User
<div class="d-flex flex-column align-items-center justify-content-center mt-4">
    <div class="d-flex w-100 flex-row align-items-center justify-content-between">
        <h1>Register to this Cool Site!</h1>
        <a href="/login">Login</a>
    </div>
    <form action="/user/create" method="post" class="d-flex flex-column gap-3 w-25 align-items-center">
        <div class="d-flex flex-column m-2">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" type="text">
            <span class="text-danger" asp-validation-for="FirstName"></span>
        </div>
        <div class="d-flex flex-column m-2">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" type="text">
            <span class="text-danger" asp-validation-for="LastName"></span>
        </div>
        <div class="d-flex flex-column m-2">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="text">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="d-flex flex-column m-2">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="d-flex flex-column m-2">
            <label asp-for="Confirm">Confirm Password</label>
            <input asp-for="Confirm" type="password">
            <span class="text-danger" asp-validation-for="Confirm"></span>
        </div>
        <input type="submit" value="Sign Up Now" class="btn btn-primary w-50">
    </form>
</div>